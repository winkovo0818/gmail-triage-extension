# 服务器配置
PORT=3000
NODE_ENV=development

# CORS配置（多个来源用逗号分隔）
CORS_ORIGIN=*

# LLM提供商配置 - 默认使用OpenAI聊天补全接口
LLM_API_BASE=https://api.openai.com/v1
LLM_API_KEY=
LLM_MODEL=gpt-4o-mini

# 缓存配置（秒）
CACHE_TTL=3600

# 数据库配置（可选，不配置则不使用持久化）
MONGODB_URI=

# 安全配置
# 可选：扩展调用后端的API密钥
BACKEND_API_KEY=

# 加密密钥（生产环境请使用KMS）
ENCRYPTION_KEY=change-me-to-random-secure-key

# 日志配置
LOG_LEVEL=info
